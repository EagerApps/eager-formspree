{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./form.css"
      }, {
        "type": "script",
        "src": "./script.js"
      }
    ]
  },
  "options": {
    "properties": {
      "email": {
        "order": 1,
        "title": "Email address to send responses to",
        "type": "string",
        "default": "your@email.com"
      },
      "container": {
        "order": 2,
        "title": "Location of the page to place the form",
        "type": "object",
        "format": "element"
      },
      "elements": {
        "order": 3,
        "title": "Fields to include in the form",
        "type": "object",
        "properties": {
          "name": {
            "order": 1,
            "title": "Name",
            "type": "boolean",
            "default": false
          },
          "email": {
            "order": 2,
            "title": "Email",
            "type": "boolean",
            "default": true
          },
          "message": {
            "order": 3,
            "title": "Message",
            "type": "boolean",
            "default": true
          }
        }
      },
      "color": {
        "order": 4,
        "title": "Accent color",
        "type": "string",
        "format": "color",
        "default": "#1593ff"
      }
    }
  }
}
